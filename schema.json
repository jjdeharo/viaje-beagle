{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/beagle.schema.json",
  "$defs": {
    "localizedText": {
      "type": "object",
      "required": [
        "es",
        "ca",
        "gl",
        "eu",
        "en"
      ],
      "properties": {
        "es": {
          "type": "string",
          "minLength": 3
        },
        "ca": {
          "type": "string",
          "minLength": 3
        },
        "gl": {
          "type": "string",
          "minLength": 3
        },
        "eu": {
          "type": "string",
          "minLength": 3
        },
        "en": {
          "type": "string",
          "minLength": 3
        }
      },
      "additionalProperties": false
    }
  },
  "title": "Ruta del HMS Beagle",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "const": "FeatureCollection"
    },
    "features": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "const": "Feature"
          },
          "properties": {
            "type": "object",
            "required": [
              "nombre",
              "fecha_inicio",
              "fecha_fin",
              "interes",
              "texto",
              "tags"
            ],
            "properties": {
              "nombre": {
                "type": "string",
                "minLength": 3
              },
              "fecha_inicio": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
              },
              "fecha_fin": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
              },
              "interes": {
                "type": "string",
                "minLength": 10
              },
              "texto": {
                "type": "string",
                "minLength": 300,
                "maxLength": 600
              },
              "nombre_i18n": {
                "$ref": "#/$defs/localizedText"
              },
              "interes_i18n": {
                "$ref": "#/$defs/localizedText"
              },
              "texto_i18n": {
                "$ref": "#/$defs/localizedText"
              },
              "enlaces": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "label",
                    "url"
                  ],
                  "properties": {
                    "label": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label_i18n": {
                      "$ref": "#/$defs/localizedText"
                    },
                    "url": {
                      "type": "string",
                      "format": "uri"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "tags": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string",
                  "enum": [
                    "geología",
                    "paleontología",
                    "biogeografía",
                    "botánica",
                    "zoología",
                    "ecología",
                    "sismología",
                    "volcanismo",
                    "corales",
                    "etnografía",
                    "historia",
                    "fin",
                    "inicio"
                  ]
                }
              }
            },
            "additionalProperties": false
          },
          "geometry": {
            "type": "object",
            "required": [
              "type",
              "coordinates"
            ],
            "properties": {
              "type": {
                "const": "Point"
              },
              "coordinates": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": false,
                "prefixItems": [
                  {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                  },
                  {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
